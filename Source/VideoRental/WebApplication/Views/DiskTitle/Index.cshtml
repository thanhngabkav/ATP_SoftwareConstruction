@model IEnumerable<DataAccess.Entities.DiskTitle>

@{
    ViewBag.Title = "Index";
}

<p>
    <a class="btn btn-primary" href="/DiskTitle/Create">Thêm Tiêu Đề Đĩa</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tags)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageLink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            
        </th>
        <th>
           
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @{ 
                string content = item.Title;
            }
            @Html.ActionLink(content, "Details", new { id = item.TitleID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tags)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageLink)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
        <td>
            @Html.ActionLink("Xóa tiêu đề", "Delete", new { id=item.TitleID }) 
            
        </td>
        <td>
            @{
                string link = "/TitleManagement/GetTitleInfomation/" + item.TitleID;
            }
            <a href=@link>Chi tiết trạng thái</a>
        </td>
    </tr>
}

</table>
