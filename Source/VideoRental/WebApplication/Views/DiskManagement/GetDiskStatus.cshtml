@model WebApplication.Models.DiskStatusInfoModel

@{
    ViewBag.Title = "GetDiskStatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xem thông tin đĩa</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã đĩa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiskID)
        </dd>

        <dt>
            Tiêu đề
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Trạng thái
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        
        @if (Model.Status == "RENTED")
        {
            <dt>
                Ngày hết hạn
            </dt>

            <dd>
                @Convert.ToDateTime(Model.DueTime).ToString("dd/MM/yyyy")
            </dd>
            <dt>
                Người thuê
            </dt>

            <dd>
                  @Html.DisplayFor(model => model.CustomerName)
            </dd>
        }
        @if (Model.Status == "BOOKED")
        {
            <dt>
                Người đặt
            </dt>

            <dd> 
                @Html.DisplayFor(model => model.CustomerName)
            </dd>
        }


    </dl>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a class="btn btn-primary" href="/Disk/Index">Quay lại</a>
        </div>
    </div>
</div>
